        });

        /* Two-column grids (Mission/Vision, Team+Security, Roadmap list) */
        document.querySelectorAll('div[style*="grid-template-columns:repeat(2"]').forEach(el => {
          if (w <= 768) setCols(el, 1);
          else setCols(el, 2);
        });

        /* Three-column grids (Stats section, if you uncomment it later) */
        document.querySelectorAll('div[style*="grid-template-columns:repeat(3"]').forEach(el => {
          if (w <= 720) setCols(el, 1);
          else setCols(el, 3);
        });

        /* Tweak outer section padding for smaller screens */
        const section = document.querySelector('section[style*="padding:4rem 5%"]');
        if (section) {
          if (w <= 480) section.style.padding = '3rem 3%';
          else if (w <= 768) section.style.padding = '3.5rem 4%';
          else section.style.padding = '4rem 5%';
        }
      }

      applyResponsive();
      window.addEventListener('resize', applyResponsive);
    })();
  </script>

