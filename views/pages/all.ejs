<style>
    /* CARD */
    .item {
        width: 100%;
        background: rgba(255, 255, 255, 0.04);
        border-radius: 14px;
        padding: 18px;
        display: flex;
        align-items: center;
        gap: 2px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
    }

    /* IMAGE WRAPPER */
    .item-img {
        width: 200px;
        /* fixed clean square */
        height: 200px;
        flex-shrink: 1;
        border-radius: 12px;
        overflow: hidden;
        background: #000;
    }

    /* IMAGE PERFECT DISPLAY */
    .item-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
    }

    /* DETAILS */
    .item-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .item-details h6 {
        margin: 0;
        color: #fff;
        font-size: 15px;
    }

    .detail-btn {
        margin-top: 10px;
        padding: 10px 12px;
        width: 100%;
        border-radius: 10px;
    }

    .meta-row {
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
        font-size: 0.92rem;
        color: var(--text-light);
        width: 100%;
        line-height: 1.3;
    }

    /* ---------- ICON ---------- */
    .meta-row i {
        color: var(--neon-blue);
        font-size: 0.9rem;
        margin-top: 1px;
        flex: 0 0 auto;
        text-shadow: 0 0 5px rgba(0, 188, 212, 0.45);
    }

    /* ---------- LABEL (never breaks) ---------- */
    .meta-label {
        white-space: nowrap;
        /* keeps "Location :" on one line */
        font-weight: 700;
        flex: 0 0 auto;
    }

    /* ---------- VALUE (wraps naturally, fixes all issues) ---------- */
    .meta-value {
        flex: 1 1 0%;
        min-width: 0;
        /* CRITICAL: allows proper wrapping */
        word-break: break-word;
        display: inline-block;
    }

    /* MOBILE RESPONSIVE */
    @media (max-width: 600px) {
        .item {
            flex-direction: column;
            text-align: center;
            align-items: center;
        }

        .item-img {
            width: 90%;
            height: 240px;
        }

    }
</style>
<div>
    <section class="search-section">
        <div class="search-container">
            <h3>Find Lost Items</h3>
            <!-- SEARCH FORM (page embedded) -->
            <form class="d-flex" role="search" action="/searchs" method="GET" style="gap:8px; align-items:center;">
                <input class="form-control me-2" type="search" name="q"
                    placeholder="Search for items (e.g. laptop, keys, wallet)" aria-label="Search"
                    value="<%= typeof q !== 'undefined' ? q : '' %>">
                <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Search</button>
            </form>
            <p class="mt-3">Browse through our database of lost and found items to reunite with your belongings</p>
        </div>

        <div class="items-container">
            <% if (!items || items.length===0) { %>
                <p style="padding:12px 20px; opacity:0.85;">No items found.</p>
                <% } %>

                    <% for(let item of items){ %>
                        <div class="item">
                            <div class="item-img">
                                <img src="<%= item.imageUrl %>" alt="<%= item.category %>">
                            </div>
                            <div class="item-details">
                                <h6><i class="fas fa-tag"></i> <strong>Category :</strong>&nbsp; <%= item.category %>
                                </h6>
                                <div class="meta-row">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <h6><span class="meta-label"><strong>Location :</strong></span></h6>
                                    <h6><span class="meta-value">
                                        <%= item.location %>
                                    </span></h6>
                                </div>

                                <h6><i class="fas fa-code-branch"></i> <strong>Status :</strong>&nbsp; <%= item.status
                                        %>
                                </h6>
                                <h6><i class="fas fa-calendar"></i> <strong>Date :</strong>&nbsp; <%=
                                        item.createdAt.toString().split(" ").slice(1,4).join(" ") %> <br></h6>
                    <a href=" /items/<%=item._id%>"><button type="button" class="btn btn-primary detail-btn">See
                                            Details</button></a>
                            </div>
                        </div>
                        <% } %>
        </div>
    </section>
</div>