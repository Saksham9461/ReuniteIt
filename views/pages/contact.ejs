                </div>
            </div>

            <!-- FAQ quick links -->
            <div
                style="margin-top:18px; border-radius:15px; border:1px solid rgba(255,255,255,.15); background:linear-gradient(120deg, rgba(0,188,212,.10), rgba(138,43,226,.10)); box-shadow:0 8px 32px rgba(0,0,0,.4); padding:16px;">
                <div style="display:flex; gap:10px; flex-wrap:wrap; align-items:center;">
                    <span style="font-weight:700; color:#e0e0e0;"><i class="fas fa-question-circle"
                            style="color:#00bcd4; margin-right:8px;"></i>Need quick help?</span>
                    <a href="/login"
                        style="text-decoration:none; padding:10px 14px; border-radius:10px; font-weight:700; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.06); color:#e0e0e0; transition:all .3s ease;"
                        onmouseover="this.style.background='#00bcd4'; this.style.color='#0f0f0f'; this.style.boxShadow='0 0 15px rgba(0,188,212,.6)';"
                        onmouseout="this.style.background='rgba(255,255,255,.06)'; this.style.color='#e0e0e0'; this.style.boxShadow='none';">
                        Login
                    </a>
                    <a href="/signup"
                        style="text-decoration:none; padding:10px 14px; border-radius:10px; font-weight:700; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.06); color:#e0e0e0; transition:all .3s ease;"
                        onmouseover="this.style.background='#00bcd4'; this.style.color='#0f0f0f'; this.style.boxShadow='0 0 15px rgba(0,188,212,.6)';"
                        onmouseout="this.style.background='rgba(255,255,255,.06)'; this.style.color='#e0e0e0'; this.style.boxShadow='none';">
                        Sign Up
                    </a>
                    <a href="mailto:sakshamojha9461@gmail.com"
                        style="text-decoration:none; padding:10px 14px; border-radius:10px; font-weight:700; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.06); color:#e0e0e0; transition:all .3s ease;"
                        onmouseover="this.style.background='#00bcd4'; this.style.color='#0f0f0f'; this.style.boxShadow='0 0 15px rgba(0,188,212,.6)';"
                        onmouseout="this.style.background='rgba(255,255,255,.06)'; this.style.color='#e0e0e0'; this.style.boxShadow='none';">
