                        style="font-size:1.25rem; margin:0 0 14px; color:#e0e0e0; display:flex; align-items:center; gap:10px;">
                        <i class="fas fa-envelope" style="color:#00bcd4;"></i> Send a Message
                    </h3>
                    <form action="https://formspree.io/f/mblveakw" method="post" autocomplete="off" id="contactForm"
                        style="display:grid; grid-template-columns:1fr 1fr; gap:12px;">
                        <div style="grid-column:span 1;">
                            <label for="name"
                                style="display:block; margin:0 0 6px; font-weight:600; color:#e0e0e0;">Full Name</label>
                            <input id="name" name="name" type="text" placeholder="Your name"
                                style="width:100%; padding:12px 14px; border-radius:10px; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.12); color:#fff; outline:none; transition:box-shadow .3s ease, border-color .3s ease;"
                                onfocus="this.style.boxShadow='0 0 0 4px rgba(0,188,212,.15)'; this.style.borderColor='#00bcd4';"
                                onblur="this.style.boxShadow='none'; this.style.borderColor='rgba(255,255,255,.15)';"
                                required>
                        </div>

                        <!-- Email -->
                        <div style="grid-column:span 1;">
                            <label for="email"
                                style="display:block; margin:0 0 6px; font-weight:600; color:#e0e0e0;">Email</label>
                            <input id="email" name="email" type="email" placeholder="you@example.com"
                                style="width:100%; padding:12px 14px; border-radius:10px; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.12); color:#fff; outline:none; transition:box-shadow .3s ease, border-color .3s ease;"
                                onfocus="this.style.boxShadow='0 0 0 4px rgba(0,188,212,.15)'; this.style.borderColor='#00bcd4';"
                                onblur="this.style.boxShadow='none'; this.style.borderColor='rgba(255,255,255,.15)';"
                                required>
                        </div>

                        <!-- Subject -->
                        <div style="grid-column:span 2;">
                            <label for="subject"
                                style="display:block; margin:0 0 6px; font-weight:600; color:#e0e0e0;">Subject</label>
                            <input id="subject" name="subject" type="text" placeholder="How can we help?"
                                style="width:100%; padding:12px 14px; border-radius:10px; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.12); color:#fff; outline:none; transition:box-shadow .3s ease, border-color .3s ease;"
                                onfocus="this.style.boxShadow='0 0 0 4px rgba(0,188,212,.15)'; this.style.borderColor='#00bcd4';"
                                onblur="this.style.boxShadow='none'; this.style.borderColor='rgba(255,255,255,.15)';"
                                required>
                        </div>

                        <!-- Message -->
                        <div style="grid-column:span 2;">
                            <label for="message"
                                style="display:block; margin:0 0 6px; font-weight:600; color:#e0e0e0;">Message</label>
                            <textarea id="message" name="message" rows="6" placeholder="Write your message..."
                                style="width:100%; padding:12px 14px; border-radius:10px; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.12); color:#fff; outline:none; transition:box-shadow .3s ease, border-color .3s ease; resize:vertical;"
                                onfocus="this.style.boxShadow='0 0 0 4px rgba(0,188,212,.15)'; this.style.borderColor='#00bcd4';"
                                onblur="this.style.boxShadow='none'; this.style.borderColor='rgba(255,255,255,.15)';"
                                required></textarea>
                        </div>
                        <div id="formStatus" style="margin-top:2px; font-weight:600;"></div>
                        <!-- Actions -->
                        <div style="grid-column:span 2; display:flex; gap:10px; flex-wrap:wrap;">
                            <button type="submit"
                                style="padding:12px 18px; border-radius:10px; font-weight:700; border:0; background:#00bcd4; color:#0f0f0f; box-shadow:0 8px 22px rgba(0,188,212,.35); cursor:pointer; transition:transform .3s ease, box-shadow .3s ease;"
                                onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 12px 28px rgba(0,188,212,.45)';"
                                onmouseout="this.style.transform='none'; this.style.boxShadow='0 8px 22px rgba(0,188,212,.35)';">
                                <i class="fas fa-paper-plane" style="margin-right:8px;"></i> Send Message
                            </button>
                            <a href="mailto:sakshamojha9461@gmail.com"
                                style="display:inline-flex; align-items:center; gap:8px; padding:12px 16px; border-radius:10px; font-weight:700; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.06); color:#e0e0e0; text-decoration:none; transition:all .3s ease;"
                                onmouseover="this.style.background='#00bcd4'; this.style.color='#0f0f0f'; this.style.boxShadow='0 0 15px rgba(0,188,212,.6)';"
                                onmouseout="this.style.background='rgba(255,255,255,.06)'; this.style.color='#e0e0e0'; this.style.boxShadow='none';">
                                <i class="fas fa-at"></i> Email Us
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Info + Map Card -->
                <div style="display:flex; flex-direction:column; gap:18px;">
                    <!-- Contact Info -->
                    <div
                        style="border-radius:15px; border:1px solid rgba(255,255,255,.15); background:rgba(255,255,255,.08); backdrop-filter:blur(12px); -webkit-backdrop-filter:blur(12px); box-shadow:0 8px 32px rgba(0,0,0,.4); padding:18px;">
                        <h3
                            style="font-size:1.25rem; margin:0 0 10px; color:#e0e0e0; display:flex; align-items:center; gap:10px;">
                            <i class="fas fa-info-circle" style="color:#00bcd4;"></i> Contact Details
                        </h3>
                        <div style="display:grid; grid-template-columns:1fr; gap:10px; font-size:.95rem;">
                            <div class="contact-row"
