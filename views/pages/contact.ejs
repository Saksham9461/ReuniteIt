                    </a>
                </div>
            </div>

        </div>
    </section>

    <script>
        (function () {
            function qs(sel) { return document.querySelector(sel); }
            function qsa(sel) { return Array.from(document.querySelectorAll(sel)); }
            function setCols(el, cols) { if (el) el.style.gridTemplateColumns = cols; }

            function applyResponsive() {
                const w = window.innerWidth;

                // 1) Collapse any 2-column grids (your bullet lists) on small screens
                qsa('ul[style*="grid-template-columns:repeat(2"], div[style*="grid-template-columns:repeat(2"]').forEach(el => {
                    if (w <= 720) setCols(el, '1fr');
                    else setCols(el, 'repeat(2,minmax(0,1fr))');
                });

                // 2) Soften outer padding on smaller screens
                const section = qs('section[style*="padding:4rem 5%"]');
                if (section) {
                    if (w <= 480) section.style.padding = '3rem 3%';
                    else if (w <= 768) section.style.padding = '3.5rem 4%';
                    else section.style.padding = '4rem 5%';
                }

                // 3) Prevent overflow: make long links wrap nicely inside cards
                qsa('a').forEach(a => {
                    a.style.wordBreak = (w <= 560) ? 'break-word' : '';
                });

                // 4) Optional: increase card padding slightly on desktop, tighter on mobile
                qsa('div[style*="padding:18px;"][style*="border:1px solid rgba(255,255,255,.15)"]').forEach(card => {
                    if (w <= 560) card.style.padding = '14px';
                    else card.style.padding = '18px';
                });

            }
            applyResponsive();
            window.addEventListener('resize', applyResponsive);
        })();
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("contactForm");
            const statusEl = document.getElementById("formStatus");

            form.addEventListener("submit", async (e) => {
                e.preventDefault(); // STOP redirect

                statusEl.style.color = "#00e5ff";
                statusEl.textContent = "Sending...";

                const formData = new FormData(form);

                try {
                    const response = await fetch(form.action, {
                        method: "POST",
                        headers: { "Accept": "application/json" },
                        body: formData
                    });

                    if (response.ok) {
                        statusEl.style.color = "#66ffb2";
                        statusEl.textContent = "Message sent successfully!";
                        form.reset();
                    } else {
                        statusEl.style.color = "#ff7b7b";
                        statusEl.textContent = "Unable to send message. Try again.";
                    }
                } catch (err) {
                    statusEl.style.color = "#ff7b7b";
                    statusEl.textContent = "Network error — please try again!";
                }
            });
        });
    </script>

