<style>
    .items-container {
        display: flex;
        justify-content: center;
        align-items: center;
        line-height: 2rem;
    }

    .search-section {
        margin-top: 0;
    }

    .item {
    width: 100%;
    background: rgba(255, 255, 255, 0.04);
    border-radius: 14px;
    padding: 18px;
    display: flex;
    align-items: center;
    gap: 2px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.25);
}
    .item-img {
        width: 200px;
        height: 200px;
        flex-shrink: 1;
        border-radius: 12px;
        overflow: hidden;
        background: #000;
    }

    /* IMAGE PERFECT DISPLAY */
    .item-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
    }

    .text-link {
        text-align: center;
        margin-top: 15px;
    }

    .text-link a {
        color: #fff;
        text-decoration: underline;
    }

    @media (min-width: 1200px) {
        .items-container {
            justify-content: center;
        }

        .item-img img {
            object-fit: cover;
        }

        .item {
            width: 50%;
            max-width: 1000px;
        }

    }

    /* Tablets (≤992px) */
    @media (max-width: 992px) {
        .items-container {
            flex-wrap: wrap;
            gap: 1rem;
        }

        .item {
            width: 80%;
            margin-bottom: 1rem;
        }

        .item-img img {
            width: 100%;
            height: auto;
        }
    }

    /* Mobile devices (≤576px) */
    @media (max-width: 576px) {
        .items-container {
            flex-direction: column;
            align-items: center;
            padding: 0 1rem;
        }

        .item {
            width: 100%;
            margin-bottom: 1rem;
        }

        .item-details h6 {
            font-size: 0.9rem;
            line-height: 1.6rem;
        }

        .text-link {
            margin-top: 10px;
        }

        .text-link a {
            font-size: 0.9rem;
        }
    }
</style>

<body>
    <div>
        <section class="search-section">
            <div class="items-container">
                <div class="item">
                    <div class="item-img">
                        <img src="<%= item.imageUrl %>" alt="<%= item.category %>">
                    </div>
                    <div class="item-details">
                        <h6><i class="fa-solid fa-heading icon-box"></i> <strong>Posted By: </strong> &nbsp; <%=
                                item.name %>
                        </h6>
                        <h6><i class="fas fa-tag"></i> <strong>Category :</strong>
                            &nbsp; <%= item.category %>
                        </h6>
                        <h6><i class="fas fa-map-marker-alt"></i> <strong>Location :</strong>
                            &nbsp; <%= item.location %>
                        </h6>
                        <h6><i class="fas fa-code-branch"></i> <strong>Status :</strong>
                            &nbsp; <%= item.status %>
                        </h6>
                        <h6><i class="fas fa-calendar"></i> <strong>Date :</strong>
                            &nbsp; <%= item.createdAt.toString().split(" ").slice(1,4).join(" ") %> <br>
                        </h6>
                        <div class=" text-link mt-3">
                                Is This Yours? <a href="mailto:<%= item.email %>">Contact Poster</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

</body>